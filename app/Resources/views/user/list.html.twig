{% extends 'layout.html.twig' %}

{% block content %}

<a href="{{ path('user_create') }}" type="button" class="btn btn-primary">Create user</a>
<a href="{{ path('groups') }}" type="button" class="btn btn-primary">Groups</a>

<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Username</td>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.getId() }}
            <td>{{ user.getName() }}
            <td>
               <a href="{{ path('user_delete', {'id': user.getId(), }) }}" class="btn btn-danger">Delete User</a>
             </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}